public class TreeNode {
    int value;
    TreeNode left;
    TreeNode right;

    TreeNode(int value){
        this.value = value;
        left = null;
        right = null;
    }

    TreeNode(){
        left = null;
        right = null;
        this.value = 0;
    }
}

public class BinaryTree {

    TreeNode root;

    BinaryTree(int val){
        root = new TreeNode(val);
    }

    BinaryTree(){
        root = null;
    }

    public boolean search(int val){
        return searchHelper(root,val);
    }

    private boolean searchHelper(TreeNode root, int val){

        if (root == null){
            return false;
        }

        if (root.value < val)
            return searchHelper(root.right,val);

        if (root.value > val)
            return searchHelper(root.left,val);

        if (root.value == val)
            return true;

        return false;
    }
}