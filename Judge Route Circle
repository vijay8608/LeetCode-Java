class Solution {
    public boolean judgeCircle(String moves) {
        int v = 0, h = 0;
        for(char c : moves.toCharArray()){
            switch(c){
                case 'U':v++;
                    break;
                case 'D':v--;
                    break;
                case 'L':h--;
                    break;
                case 'R':h++;
                    break;
            }
        }

        
        return ( v == 0 && h == 0 ) ? true : false;
    }
}